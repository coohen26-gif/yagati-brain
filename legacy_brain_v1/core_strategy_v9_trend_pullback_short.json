      "method": "above_last_swing_or_ema50",
      "buffer_pct": 0.3
    },
    "take_profit": {
      "tp1": "recent_low",
      "tp2": "measured_move_optional"
    },
    "risk_reward": {
      "evaluation_basis": "TP1_ONLY",
      "min_rr": 2.5,
      "keep_rr": 3.0
    }
  },
  "filters": {
    "no_trade_if": [
      "market_regime != TREND",
      "trend_bias != DOWN",
      "rr < 2.5"
    ]
  },
